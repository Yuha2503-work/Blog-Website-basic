<%- include('partials/header'); -%>
<h1>Compose</h1>

<form action="/compose" method="post">


  <div class="form-group">
    <label>Title</label>
    <input class="form-control" rows="1" name="postTitle"></input>
  </div>

  <div class="form-group">
    <label>Content</label>
    <textarea class="form-control" rows="4" name="postContent"></textarea>
  </div>

  <button class="btn btn-primary btn-lg" type="submit" name="publishCompose">Publish</button>

</form>
<%- include('partials/footer'); -%>
